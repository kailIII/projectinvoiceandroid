<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/llTopMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/page_padding" >

        <Button
            android:id="@+id/btBack"
            style="@style/CustomButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="zurÃ¼ck"
            android:textColor="@color/BLACK" />

        <Button
            android:id="@+id/btCreate"
            style="@style/CustomButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="speichern"
            android:textColor="@color/BLACK" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/BG_PAGE" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_margin_bottom"
                android:text="Firma" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:orientation="vertical"
                android:padding="@dimen/page_padding" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Logo: " />

                    <ImageView
                        android:id="@+id/ivCompanyAvatar"
                        android:layout_width="fill_parent"
                        android:layout_height="100dip"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/page_margin_top"
                        android:src="@drawable/ic_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Firma: " />

                    <EditText
                        android:id="@+id/etFirma"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Address: " />

                    <EditText
                        android:id="@+id/etAddress"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="PLZ: " />

                    <EditText
                        android:id="@+id/etPLZ"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Stadt: " />

                    <EditText
                        android:id="@+id/etStadt"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_margin_bottom"
                android:layout_marginTop="@dimen/page_margin_top"
                android:text="Firmen Daten" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:orientation="vertical"
                android:padding="@dimen/page_padding" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="C/o: " />

                    <EditText
                        android:id="@+id/etCO"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/TRANSPARENT"
                    android:gravity="center_vertical"
                    android:minHeight="40dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/text_lable_sex" />

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/text_lable_male" />

                        <RadioButton
                            android:id="@+id/rbFeMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_lable_female" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Tel: " />

                    <EditText
                        android:id="@+id/etTel"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Fax: " />

                    <EditText
                        android:id="@+id/etFax"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Email: " />

                    <EditText
                        android:id="@+id/etEmail"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="USt: " />

                    <EditText
                        android:id="@+id/etUSt"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_margin_bottom"
                android:layout_marginTop="@dimen/page_margin_top"
                android:text="Bank" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:orientation="vertical"
                android:padding="@dimen/page_padding" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text=" " />

                    <EditText
                        android:id="@+id/etBankName"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Kontonr: " />

                    <EditText
                        android:id="@+id/etKontonr"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="BLZ: " />

                    <EditText
                        android:id="@+id/etBLZ"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Bank: " />

                    <EditText
                        android:id="@+id/etBank"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_margin_bottom"
                android:layout_marginTop="@dimen/page_margin_top"
                android:text="Allegmein" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:orientation="vertical"
                android:padding="@dimen/page_padding" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Mehrwertsteuer Text: " />

                    <EditText
                        android:id="@+id/etMehrwertsteuerText"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Mehrwertsteuer Wert: " />

                    <EditText
                        android:id="@+id/etMehrwertsteuerWert"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Rechnungsnr Conf: " />

                    <EditText
                        android:id="@+id/etRechnungsnr"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/page_margin_right"
                        android:layout_weight="2"
                        android:text="Sacbearbeiter: " />

                    <EditText
                        android:id="@+id/etSacbearbeiter"
                        style="@style/CustomEditText"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="none"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>