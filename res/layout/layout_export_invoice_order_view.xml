<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/WHITE_COLOR"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rllMainTopMenu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/BG_BANNER_TOP_ITEM_SKIN"
                android:minHeight="@dimen/min_height_total_menu_topic"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/llTopMenu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bar_bottom_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/page_padding" >

                    <Button
                        android:id="@+id/btBack"
                        style="@style/CustomButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="zurÃ¼ck"
                        android:textColor="@color/BLACK" />

                    <Button
                        android:id="@+id/btEmail"
                        style="@style/CustomButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:text="E-Mail"
                        android:textColor="@color/BLACK" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llTopMenu"
                    android:contentDescription="@string/content_description_image"
                    android:src="@drawable/ic_banner_shadow_1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llTopMenu"
                    android:background="@color/TRANSPARENT"
                    android:gravity="center"
                    android:minHeight="@dimen/min_height_menu_sub_topic"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_top" >

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin"
                        android:background="@color/TRANSPARENT"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/tvDescriptionTopic"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:gravity="center"
                        android:minLines="2"
                        android:text="@string/text_title_topic_1_subtopic_1"
                        android:textColor="@color/WHITE_COLOR"
                        android:textSize="@dimen/font_size_title_sub_topic" />
                </LinearLayout>
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />
        </LinearLayout>
    </TabHost>

</LinearLayout>